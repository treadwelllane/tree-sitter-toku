{
  "name": "tree-sitter-toku",
  "version": "0.0.1",
  "description": "Toku grammar for tree-sitter",
  "repository": "github:tree-sitter/tree-sitter-toku",
  "license": "MIT",
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "toku"
  ],
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**"
  ],
  "dependencies": {
    "node-addon-api": "^7.1.0",
    "node-gyp-build": "^4.8.0"
  },
  "devDependencies": {
    "prebuildify": "^6.0.0",
    "tree-sitter-cli": "^0.22.6"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.0"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "prebuildify": "prebuildify --napi --strip",
    "build": "tree-sitter generate --no-bindings",
    "build-wasm": "tree-sitter build --wasm",
    "test": "tree-sitter test",
    "parse": "tree-sitter parse"
  },
  "tree-sitter": [
    {
      "scope": "text.sh.toku",
      "file-types": [ "toku" ],
      "highlights": "queries/highlights.scm",
      "injections": "queries/injections-bash.scm",
      "injection-regex": "toku"
    },
    {
      "scope": "text.css.toku",
      "file-types": [ "toku" ],
      "highlights": "queries/highlights.scm",
      "injections": "queries/injections-css.scm",
      "injection-regex": "toku"
    },
    {
      "scope": "Dockerfile.toku",
      "file-types": [ "toku" ],
      "highlights": "queries/highlights.scm",
      "injections": "queries/injections-dockerfile.scm",
      "injection-regex": "toku"
    },
    {
      "scope": "text.html.toku",
      "file-types": [ "toku" ],
      "highlights": "queries/highlights.scm",
      "injections": "queries/injections-html.scm",
      "injection-regex": "toku"
    },
    {
      "scope": "text.js.toku",
      "file-types": [ "toku" ],
      "highlights": "queries/highlights.scm",
      "injections": "queries/injections-javascript.scm",
      "injection-regex": "toku"
    },
    {
      "scope": "text.json.toku",
      "file-types": [ "toku" ],
      "highlights": "queries/highlights.scm",
      "injections": "queries/injections-json.scm",
      "injection-regex": "toku"
    },
    {
      "scope": "Makefile.toku",
      "file-types": [ "toku" ],
      "highlights": "queries/highlights.scm",
      "injections": "queries/injections-make.scm",
      "injection-regex": "toku"
    },
    {
      "scope": "text.lua.toku",
      "file-types": [ "toku" ],
      "highlights": "queries/highlights.scm",
      "injections": "queries/injections-lua.scm",
      "injection-regex": "toku"
    }
  ],
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es2021": true
    },
    "extends": "google",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "arrow-parens": "off",
      "camel-case": "off",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "max-len": [
        "error",
        {
          "code": 160,
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true
        }
      ],
      "spaced-comment": [
        "warn",
        "always",
        {
          "line": {
            "markers": [
              "/"
            ]
          }
        }
      ]
    }
  }
}
